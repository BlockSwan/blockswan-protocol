{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "alwaysStrict": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist/types",
    "resolveJsonModule": true,
  },
  "include": [
    "./src",
  ],
  "files": [
    "./hardhat.config.ts"
  ],
  "exclude": [
    "node_modules",
    "./src/**/*.test.ts",
    "./src/**/_mocks.ts",
    "./dist"
  ]
}